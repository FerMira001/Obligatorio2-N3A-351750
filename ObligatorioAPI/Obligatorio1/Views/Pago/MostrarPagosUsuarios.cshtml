<h2>Usuarios con pagos mayores a @ViewBag.MontoMinimo</h2>

<form method="get" asp-action="MostrarPagosUsuarios">
    <div class="form-group">
        <label>Monto minimo</label>
        <input type="number" name="montoMin" min="0" class="form-control" value="@(ViewBag.MontoMinimo)" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Buscar</button>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Usuario</th>
            <th>Mail</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in ViewBag.Usuarios)
        {
            <tr>
                <td>@u.Usuario</td>
                <td>@u.Mail</td>
                <td>$@u.TotalPagado</td>
            </tr>
        }
    </tbody>
</table>
