@model ObligatorioMVC.Models.PagoRecurrenteDTO

@{
    ViewData["Title"] = "Crear Pago Recurrente";
}

<h2>Crear Pago Recurrente</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<form asp-action="CrearPagoRecurrente" method="post">
    <div class="mb-3">
        <label asp-for="Desc" class="form-label">Descripción</label>
        <input asp-for="Desc" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="MontoMensual" class="form-label">Monto Mensual</label>
        <input asp-for="MontoMensual" type="number" step="0.01" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="FechaInicio" class="form-label">Fecha de Inicio</label>
        <input asp-for="FechaInicio" type="date" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="FechaFin" class="form-label">Fecha de Fin</label>
        <input asp-for="FechaFin" type="date" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="TipoGastoId" class="form-label">Tipo de Gasto (ID)</label>
        <input asp-for="TipoGastoId" type="number" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="MetodoPago" class="form-label">Método de Pago</label>
        <select asp-for="MetodoPago" class="form-control">
            <option value="0">Crédito</option>
            <option value="1">Efectivo</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Crear</button>
    <a asp-action="MisPagos" class="btn btn-secondary">Cancelar</a>
</form>