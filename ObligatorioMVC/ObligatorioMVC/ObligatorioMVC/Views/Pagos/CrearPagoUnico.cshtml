@model ObligatorioMVC.Models.PagoUnicoDTO

@{
    ViewData["Title"] = "Crear Pago Único";
}

<h2>Crear Pago Único</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<form asp-action="CrearPagoUnico" method="post">
    <div class="mb-3">
        <label asp-for="Desc" class="form-label">Descripción</label>
        <input asp-for="Desc" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Monto" class="form-label">Monto</label>
        <input asp-for="Monto" type="number" step="0.01" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="FechaPago" class="form-label">Fecha de Pago</label>
        <input asp-for="FechaPago" type="date" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="NumRecibo" class="form-label">Número de Recibo</label>
        <input asp-for="NumRecibo" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="TipoGastoId" class="form-label">Tipo de Gasto (ID)</label>
        <input asp-for="TipoGastoId" type="number" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="MetodoPago" class="form-label">Método de Pago</label>
        <select asp-for="MetodoPago" class="form-control">
            <option value="0">Crédito</option>
            <option value="1">Efectivo</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Crear</button>
    <a asp-action="MisPagos" class="btn btn-secondary">Cancelar</a>
</form>