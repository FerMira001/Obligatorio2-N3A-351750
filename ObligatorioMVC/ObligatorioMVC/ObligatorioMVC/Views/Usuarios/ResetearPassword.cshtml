@{
    ViewData["Title"] = "Resetear Contraseña";
}

<h2>Resetear Contraseña de Usuario</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-success">
        @ViewBag.Mensaje<br />
        <strong>Nueva contraseña:</strong> @ViewBag.NuevaPassword
    </div>
}

<form asp-action="ResetearPassword" method="post">
    <div class="mb-3">
        <label class="form-label">ID del Usuario</label>
        <input type="number" name="usuarioId" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-warning">Resetear Contraseña</button>
</form>